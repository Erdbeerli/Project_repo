import requests

# Base URL for the OpenFarm API
base_url = "https://openfarm.cc/api/v1/crops"

def get_max_height(crop_name):
    """
    Fetches the maximum height of a fully grown plant from the OpenFarm API.

    Parameters:
    crop_name (str): The name of the crop to search for.

    Returns:
    float: The maximum height of the crop in cm if available, else None.
    """
    # Set up parameters for the crop search
    params = {"filter": crop_name}
    
    # Send a GET request to the API with query parameters
    response = requests.get(base_url, params=params)
    
    # Check if the request was successful
    if response.status_code == 200:
        # Parse JSON response
        data = response.json()
        
        # Check if there are results
        if data['data']:
            # Select the first result in the response
            crop = data['data'][0]
            attributes = crop['attributes']  # Access the 'attributes' dictionary

            # Get the height of the crop, which represents the maximum height
            height = attributes.get('height')
            
            # Return height if available
            if height:
                print(f"Maximum height of {crop_name} is: {height} cm")
                return height
            else:
                print("Height information is not available for this crop.")
                return None
        else:
            print("No matching crops found.")
            return None
    else:
        print(f"Request failed with status code: {response.status_code}")
        return None

# Example usage
get_max_height("parsley")

print (parsley)
